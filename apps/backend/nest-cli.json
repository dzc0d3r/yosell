{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.build.json",
    "assets": [
      {
        "include": "prisma/generated/client/**/*",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "../prisma/schema.prisma",
        "outDir": "dist/prisma"
      }
    ]
  }
}
